vi variable.tf
provider "aws" {
region = var.region
}
resource "aws_instance" "one" {
ami = "ami-0a699202e5027c10d"
instance_type = var.instance_type
tags = {
Name = var.tag
}
}
variable "region" {
description = "ec2-region"
type = string
default = "us-east-1"
}

variable "instance_type" {
description = "ec2-instance-type"
type = string
default = "t2.micro"
}
variable "tag" {
description = "tag name of ec2"
type = string
default = "variable"
}
